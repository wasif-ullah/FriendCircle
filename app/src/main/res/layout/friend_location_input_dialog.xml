<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_user_name"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/edit_text_name"
        android:layout_toStartOf="@+id/edit_text_name"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_name"
        android:layout_alignTop="@+id/edit_text_name"
        android:gravity="center"
        android:text="Enter your friend's name : " />

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_alignLeft="@+id/edit_text_phone_number"
        android:layout_alignStart="@+id/edit_text_phone_number"
        />

    <TextView
        android:id="@+id/title_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_phone_number"
        android:layout_alignTop="@+id/edit_text_phone_number"
        android:layout_below="@+id/title_user_name"
        android:gravity="center"
        android:text="Enter your friend's number : " />

    <EditText
        android:id="@+id/edit_text_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_name"
        android:inputType="phone"
        android:layout_toRightOf="@+id/title_phone_number"
        android:layout_toEndOf="@+id/title_phone_number"
        android:hint="Phone number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_sharing"
        android:layout_below="@+id/edit_text_phone_number"
        android:layout_centerHorizontal="true"
        android:text="Get my Friend Location"/>
</RelativeLayout>